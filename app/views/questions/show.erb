<article class="individual-question">
      <h2><%= @question.title %></h2>
      <p class='created-at'>At approximately: <%= @question.created_at %></p>
        <p class='username'><%= @question.author.username %> asked:</p>
        <h5>Votes: <%= @question.total_votes %></h5>


        <span class='comment-count'></span>
      <p>And they said: <%= @question.body %></p>
      <a href="/questions/<%= @question.id %>/vote" class="fa fa-arrow-circle-up"></a>
      <a href="/questions/<%= @question.id %>/delete-vote" class="fa fa-arrow-circle-down"></a>
            <div class="card">
              <% @question.comments.each do |comment| %>
                <p><%=comment.body %> by <%=comment.commentor.username%></p>
              <% end %>
            </div>

      <% if current_user == @question.author %>
        <a href="/questions/<%= @question.id %>/delete">Delete</a>
        <a href="/">Edit</a>
      <% end %>

</article>

<div class="form-wrapper" role="div">

  <% if @errors %>
    <div class="errors-wrapper">
      <span>Your answer could not be saved:</span>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% if logged_in? %>
  <form method="post" action="/questions/<%= @question.id %>/answer">
    <label for="answer">Your Answer: </label>
    <input id="answer" name="answer" type="text" >
    <br>
    <input type="submit" value="Submit" class="button">
  </form>
<% end %>
</div>


<%= erb :'comments/_new_question_comment', locals: { commentable: @question } %>


<div class="answer-container">
 <h3>Answers:</h3>
  <% @question.answers.each do |answer| %>
  <% @answer = answer %>
    <p><%= answer.body %><br>
    <p>at <%= answer.created_at %> by</p>
  <p>User: <a href="/users/<%= answer.author.id %>"><%= answer.author.username %></a></p>
      <div class="card">
      <% answer.comments.each do |comment| %>
        <p><%=comment.body %> by <%=comment.commentor.username%></p>
      <% end %>
    </div>
    <%= erb :'comments/_new_answer_comment', locals: { commentable: @answer } %>

    <% end %>
  </div>
