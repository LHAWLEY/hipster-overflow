<article class="individual-question">
      <h2><%= @question.title %></h2>
      <p class='created-at'>At approximately: <%= @question.created_at %></p>
        <p class='username'><%= @question.author.username %> asked:</p>
        <span class='vote-count'><% %></span>


        <span class='comment-count'></span>
      <p>And they said: <%= @question.body %></p>
</article>

<div class="form-wrapper" role="div">

  <% if @errors %>
    <div class="errors-wrapper">
      <span>Your answer could not be saved:</span>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% if logged_in? %>
  <form method="post" action="/questions/<%= @question.id %>/answer">
    <label for="answer">Your Answer: </label>
    <input id="answer" name="answer" type="text" >
    <br>

    <input type="submit" value="Submit" class="button">
  </form>
<% end %>
</div>



<div class="answer-container">
 <h3>Answers:</h3>
  <% answers_of_question = @question.answers %>
  <% answers_of_question. each do |answer| %>
    <p><%= answer.body %><br>
    <p>at <%= answer.created_at %> by</p>
  <p>User: <a href="/users/<%= answer.author.id %>"><%= answer.author.username %></a></p>

<% end %>
  </div>
